<!--index.wxml-->
<view class="content">
  <!--当日天气-->
  <view class="info">
    <view class='city'>当前城市：{{currentWeather.currentCity}}</view>
    <view class='temp'>{{currentWeather.date}}℃</view>
    <view class='realtime'>(实时温度)</view>
  </view>

  <!--今日天气-->
  <view class='today'>
    <view class='detail'>
      <text class='today-title'>今日天气({{date}})：</text>
    </view>
    <view class='detail'>
      {{currentWeather.weatherDesc}}
      {{currentWeather.wind}}
      温度：{{currentWeather.temperature}}
      空气指数：{{currentWeather.pm25}}
    </view>
    <view class='ganmao'>感冒提醒：</view>
    <view>
      <view class='weather'>{{ganmao.des}}</view>
    </view>
  </view>

  <!--最近3天天气-->
  <view class='forecast'>
    <view class='next-day' wx:key="{{index}}" wx:for="{{forecast}}"> 
      <view class='detail date'>{{item.date}}</view>
      <view class='detail'>{{item.weather}}</view>
      <view class='detail'>{{item.temperature}}</view>
      <view class='detail'>{{item.wind}}</view>
    </view>
  </view>

  <!--搜索-->
  <view class='search-area'>
    <input bindinput='inputing' placeholder='请输入城市名称' value='{{inputCity}}'></input>
    <button type='primary' size='mini' bindtap='bindSearch'>查询</button>
  </view>
</view>